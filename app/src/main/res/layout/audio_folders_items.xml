<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:padding="15dp">

    <ImageView  android:id="@+id/folderIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/folder" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/folderName"
        android:text="Whatsapp Audio"
        android:textSize="17dp"
        android:layout_marginTop="7dp"
        android:textColor="#212121"
        android:layout_toRightOf="@+id/folderIcon"
        android:paddingLeft="10dp"
        android:layout_marginLeft="6dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalAudio"
        android:text="110 Audios"
        android:textSize="15dp"
        android:textColor="#666666"
        android:layout_below="@+id/folderName"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/folderIcon"
        android:layout_marginLeft="6dp"></TextView>

</RelativeLayout>